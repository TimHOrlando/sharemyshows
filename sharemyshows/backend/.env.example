# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=change-this-to-a-random-secret-key-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=mysql+pymysql://sms_user:sms_password@localhost:3306/sharemyshows
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-in-production
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800
JWT_TOKEN_LOCATION=headers

# Security
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# CORS (for frontend development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:19006

# File Upload (for Phase 2)
# MAX_CONTENT_LENGTH=16777216  # 16MB
# UPLOAD_FOLDER=uploads
# ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp3,wav,m4a

# AWS S3 (for Phase 2)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=sharemyshows-uploads
# AWS_REGION=us-east-1

# Email Configuration (for Phase 2)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=noreply@sharemyshows.com

# External APIs (for Phase 6)
# SETLISTFM_API_KEY=your-setlistfm-api-key
# SHAZAM_API_KEY=your-shazam-api-key

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100 per hour

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
