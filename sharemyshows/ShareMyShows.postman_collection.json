        },
        {
          "name": "Get Nearby Venues",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/venues/nearby?latitude=40.7505&longitude=-73.9934&radius=10&limit=20",
              "host": ["{{base_url}}"],
              "path": ["venues", "nearby"],
              "query": [
                {
                  "key": "latitude",
                  "value": "40.7505"
                },
                {
                  "key": "longitude",
                  "value": "-73.9934"
                },
                {
                  "key": "radius",
                  "value": "10"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Shows",
